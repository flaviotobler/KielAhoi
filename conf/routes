# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.PortControll.layout

# Ports
GET     /portlist                   controllers.PortControll.list
GET     /portmap                    controllers.PortControll.map
GET     /ports                      controllers.PortControll.ports


GET     /add                        controllers.PortControll.add
GET     /layout                     controllers.PortControll.layout




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
