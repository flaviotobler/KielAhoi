# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.PortController.layout

# lb: Home page
GET     /                           controllers.PortController.index()
POST    /port                     controllers.PortController.addPort()
GET     /ports                    controllers.PortController.getPorts()




# Ports
GET     /portlist                   controllers.PortController.list()
GET     /portmap                    controllers.PortController.map
#GET     /ports                      controllers.PortController.ports


GET     /add                        controllers.PortController.add
GET     /layout                     controllers.PortController.layout




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)




